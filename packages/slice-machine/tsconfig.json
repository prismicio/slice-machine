{
  // TS Config used by Next to build the frontend of the application.
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "outDir": "./build",
    "paths": {
      "@lib/*": ["lib/*"],
      "@utils/*": ["lib/utils/*"],
      "@builders/*": ["lib/builders/*"],
      "@models/*": ["lib/models/*"],
      "@src/*": ["src/*"],
      "@components/*": ["components/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", "build", "storybook-static"],
  "include": [
    ".storybook/*",
    ".eslintrc.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "**/*.mts",
    "**/*.js",
    "**/*.jsx"
  ]
}
