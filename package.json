{
  "private": true,
  "engines": {
    "node": ">=20.19.0"
  },
  "packageManager": "yarn@4.12.0",
  "scripts": {
    "dev": "concurrently --prefix-colors auto \"yarn:dev:*\"",
    "dev:cli": "yarn workspace @prismicio/cli dev",
    "dev:manager": "yarn workspace @prismicio/manager dev",
    "dev:plugin-kit": "yarn workspace @prismicio/plugin-kit dev",
    "dev:adapter-next": "yarn workspace @prismicio/adapter-next dev",
    "dev:adapter-nuxt": "yarn workspace @prismicio/adapter-nuxt dev",
    "dev:adapter-nuxt2": "yarn workspace @prismicio/adapter-nuxt2 dev",
    "dev:adapter-sveltekit": "yarn workspace @prismicio/adapter-sveltekit dev",
    "build": "yarn workspaces foreach -A --parallel --topological-dev --verbose run build",
    "types": "yarn workspaces foreach -A --parallel --verbose run types",
    "lint": "yarn workspaces foreach -A --parallel --verbose run lint",
    "audit": "yarn workspaces foreach -A --parallel --verbose run audit",
    "depcheck": "yarn workspaces foreach -A --parallel --verbose run depcheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "publish": "tsx scripts/publish.ts",
    "clean": "rimraf --glob '{packages/*/{dist,package.tgz}}'"
  },
  "devDependencies": {
    "@types/semver": "7.7.1",
    "chalk": "5.6.2",
    "concurrently": "9.2.1",
    "execa": "9.6.0",
    "mri": "1.2.0",
    "prettier": "3.7.1",
    "prettier-plugin-jsdoc": "1.7.0",
    "rimraf": "6.1.2",
    "semver": "7.7.3",
    "tsx": "4.20.6"
  },
  "workspaces": [
    "packages/*"
  ]
}
